<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.chaitanya.caffinated.MainActivity5">

        <TextView
            android:text="@string/caffe_macchiato"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:id="@+id/textView14"
            android:textSize="60sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText19"
            android:textStyle="italic"
            android:textSize="30sp"
            android:inputType="none"
            android:text="@string/description_10"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="44dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText17"
            android:textSize="35sp"
            android:textStyle="bold"
            android:inputType="none"
            android:layout_marginTop="20dp"
            android:textColor="@string/purple"
            android:text="@string/instruction"
            android:layout_below="@+id/editText19" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText18"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            android:textSize="30sp"
            android:text="@string/description_11"
            android:inputType="none"
            android:layout_below="@+id/editText17" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText16"
            android:textSize="35sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@string/purple"
            android:text="@string/info"
            android:inputType="none"
            android:textIsSelectable="false"
            android:layout_below="@+id/editText18"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText15"
            android:textStyle="italic"
            android:textSize="30sp"
            android:layout_marginTop="10dp"
            android:inputType="none"
            android:text="@string/description_12"
            android:layout_below="@+id/editText16" />

    </RelativeLayout>
</ScrollView>